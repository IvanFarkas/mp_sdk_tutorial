{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "pretty": true,
    "target": "es6",
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "allowJs": true
  },
  "include": ["./src/**/**/*"]
}
